@model IEnumerable<dal.Models.UserViewModel>

@{
    ViewBag.Title = "User Management";
}

<h2>User Management</h2>



<table class="table">
    <tr>
        <th>Email</th>
        <th>UserName</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Roles</th>
        <th>Actions</th>
    </tr>

    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>@user.UserName</td>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>
                @foreach (var role in user.Roles)
                {
                    <span>@role</span>
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = user.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = user.Id })
            </td>
        </tr>
    }

</table>
